pipeline {
	agent any

    stages {
    	stage('Clone-Repo') {
	    	steps {
	        	checkout scm
	    	}
        }

        stage('Build') {
            steps {
            	sh 'mvn install -Dmaven.test.skip=true'
            }
        }
		
        stage('Unit Tests') {
            steps {
                sh 'mvn compiler:testCompile'
                sh 'mvn surefire:test'
                junit 'target/**/*.xml'
            }
        }

		stage('Docker Image') {
            steps {
				script {
					def dockerfile = './Dockerfile'
					docker.build("nageshvkn/gamutkart-img:${env.BUILD_NUMBER}", "-f ${dockerfile} .")

  					//docker.build 'nageshvkn/gamutkart-img:latest'
				}
            }   
        }
	}
}
